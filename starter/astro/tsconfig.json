{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@heliumMixins/*": ["../../tools/mixins/*"],
      "@heliumFunctions/*": ["../../tools/functions/*"],
      "@heliumComponentStyles/*": ["../../components/scss/*"],
      "@heliumComponentScripts/*": ["../../components/js/*"],
      "@projectSettings/*": ["../../starter/astro/src/styles/base/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
    }
  }
}
